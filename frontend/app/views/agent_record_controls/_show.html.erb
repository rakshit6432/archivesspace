<%
   section_id = "agent_record_controls" if section_id.blank?
   section_title = "Agent Record Controls" if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="panel-group details" id="<%= section_id %>_accordion">
    <% agent_record_controls.each_with_index do | agent_record_control, index | %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_agent_record_control_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-6">
              <%= I18n.t("agent_record_control._plural") %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_agent_record_control_<%= index %>" class="panel-collapse collapse">
          <%= read_only_view(agent_record_control) %>
        </div>
      </div>
    <% end %>
  </div>
</section>
